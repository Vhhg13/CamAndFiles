<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/topline"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="@color/black"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/list_entry_text"/>
    <TextView
        android:id="@+id/list_entry_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/topline"
        app:layout_constraintStart_toStartOf="@+id/topline"
        app:layout_constraintEnd_toEndOf="@+id/topline"
        app:layout_constraintBottom_toTopOf="@+id/bottomline"/>
    <View
        android:id="@+id/bottomline"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="5dp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@+id/list_entry_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
